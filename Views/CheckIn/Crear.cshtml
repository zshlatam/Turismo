@model CheckInCreacionViewModel
@{
    ViewData["Title"] = "Crear CheckIn";
}
<h2 class="fw-bold">Crear CheckIn </h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-controller="CheckIn" asp-action="Crear">
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <input type="text" asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Fecha" class="form-label"></label>
        <input  asp-for="Fecha" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ReservaId" class="form-label"></label>
        <input asp-for="ReservaId" class="form-control" />
        <span asp-validation-for="ReservaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    }