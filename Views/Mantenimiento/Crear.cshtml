@model MantenimientoCreacionViewModel
@{
    ViewData["Title"] = "Crear Mantenimiento";
}
<h2 class="fw-bold">Crear Mantenimiento de Departamento</h2>
<h5>here are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration </h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="Mantenimiento" asp-action="Crear">
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <input type="text" asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Fecha" class="form-label"></label>
        <input  asp-for="Fecha" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DepartamentoId" class="form-label"></label>
        <select asp-for="DepartamentoId" asp-items="Model.TiposDepartamentos" class="form-select"></select>
        <span asp-validation-for="DepartamentoId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
