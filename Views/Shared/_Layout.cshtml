<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Turismo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Turismo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Estilos.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;700;900&family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="container-fluid vh-100 d-flex g-0">
        <div class=" w-300 bgClaro shadow-sm">
            <a  class="text-decoration-none" asp-controller="Home" asp-action="Index">
            <div class="logo h-15 d-flex align-items-center justify-content-center">
                <img class="img-fluid tamanoImg " src="/img/logoAzul.png" alt="Logo empresa">
                <p class="azul nombreEmpresa px-1">TurismoReal</p>
            </div>
            </a>
            <div class="menu h-75">
                <div class="d-flex flex-column align-items-center">
                    <h3 class="textoSombra h5 fw-bold w-75 px-4 pb-2">Menú</h3>
                    <ul class="list-unstyled w-100">
                        <li class="d-flex justify-content-center align-items-center tamanoItemMenu">
                            <div class="w-75">
                                <i class="bi bi-house me-2 linkAzul"></i>
                                <a  class="text-decoration-none linkAzul "asp-controller="Departamento" asp-action="Index" >Departamentos</a>
                            </div>
                        </li>
                        <li class="d-flex justify-content-center align-items-center tamanoItemMenu">
                            <div class="w-75">
                                <i class="bi bi-person-lines-fill linkAzul me-2"></i>
                                <a href="/" class="text-decoration-none  linkAzul ">Clientes</a>
                            </div>
                        </li>
                        <li class="d-flex justify-content-center align-items-center tamanoItemMenu">
                            <div class="w-75">
                                <i class="bi bi-journal-text linkAzul  me-2"></i>
                                <a asp-controller="Reserva" asp-action="Index" class="text-decoration-none  linkAzul ">Reservas</a>
                            </div>
                        </li>
                        <li class="d-flex justify-content-center align-items-center tamanoItemMenu">
                            <div class="w-75">
                                <i class="bi bi-graph-up-arrow me-2 linkAzul"></i>
                                <a asp-controller="Mantenimiento" asp-action="Index" class="text-decoration-none linkAzul">Mantenimientos</a>
                            </div>
                        </li>
                        <li class="d-flex justify-content-center align-items-center tamanoItemMenu">
                            <div class="w-75">
                                <i class="bi bi-boxes linkAzul me-2"></i>
                                <a href="/" class="text-decoration-none linkAzul ">Servicios</a>
                            </div>
                        </li>
                        <li class="d-flex justify-content-center align-items-center tamanoItemMenu">
                            <div class="w-75">
                                <i class="bi bi-graph-up-arrow me-2 linkAzul"></i>
                                <a href="/" class="text-decoration-none linkAzul">Estadisticas</a>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="d-flex flex-column align-items-center">
                    <h3 class="textoSombra h5 fw-bold w-75 px-4 py-2">Configuaciones</h3>
                    <ul class="list-unstyled w-100">
                        <li class="d-flex justify-content-center align-items-center tamanoItemMenu">
                            <div class="w-75">
                                <i class="bi bi-person-circle linkAzul me-2"></i>
                                <a href="/" class="text-decoration-none linkGray">Perfil</a>
                            </div>
                        </li>
                        <li class="d-flex justify-content-center align-items-center tamanoItemMenu">
                            <div class="w-75">
                                <i class="bi bi-info-circle-fill linkAzul me-2"></i>
                                <a href="/" class="text-decoration-none linkGray">Asistencia</a>
                            </div>
                        </li>
                        <li class="d-flex justify-content-center align-items-center tamanoItemMenu">
                            <div class="w-75">
                                <i class="bi bi-gear-wide-connected linkAzul me-2"></i>
                                <a href="/" class="text-decoration-none linkGray">Configuración</a>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="mt-5">
                    <a href="/" class="d-flex text-decoration-none linkGray justify-content-center align-items-center">
                        <i class="bi h4 bi-box-arrow-right bolder me-2 p-0 m-0"></i>
                        <p class="p-0 m-0 textoSombra">Log Out</p>
                    </a>
                </div>
                <partial name="_LinksLogin"/>
            </div>
        </div>
        <main class="w-100 p-5">
            <div class="container">@RenderBody()</div>
           
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
